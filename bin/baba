#!/usr/bin/env coffee

fs = require 'fs'
path = require 'path'
vm = require 'vm'
{spawn} = require 'child_process'
program = require 'commander'

addOption = (value, options) ->
  o = value.split "="
  key = o[0]
  v = o[1]
  if v.split(",").length > 1
    v = v.split(",")
  options[key] = v
  return options

program.version '0.3.3'
.option '-e --eval <n>', 'Human exec method name.'
.option '-n --name <n>', 'Human id.', "takumibaba"
.option '-o --option <key>=<value>', 'An optional value, put <key>=<value>', addOption, {}
.parse process.argv

method = program.eval
name = program.name
option = program.option

if method?
  Baba = require '../lib/script'
  baba = new Baba name
  baba.exec method, option, (result) ->
    process.stdout.write result.value.toString()
    process.exit()
else
  filename = process.argv[2]
  filepath = path.resolve filename
  spawn('coffee', [[filepath]], {detached: true}).stdout.on "data", (data) ->
    process.exit()
