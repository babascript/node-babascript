#!/usr/bin/env coffee

fs = require 'fs'
path = require 'path'
vm = require 'vm'
{spawn} = require 'child_process'

filename = process.argv[2]
filepath = path.resolve filename

spawn('coffee', ['--nodejs', [filepath]]).stdout.on "data", (data) ->
  console.log data
